<!DOCTYPE html>
<html>
<head>
    <title>Visualizzatore Cubi</title>
    <style>
        #container {
            position: relative;
            width: 500px;
            height: 500px;
            border: 1px solid black;
        }
        .cube {
            position: absolute;
            width: 50px;
            height: 50px;
        }
    </style>
</head>
<body>
    <button onclick="caricaEMostraCubi()">Mostra Cubi</button>
    <div id="container"></div>

    <script>
        let cubeData = [];

        function mostraCubi() {
            const container = document.getElementById('container');
            container.innerHTML = ''; // Pulisce il container

            cubeData.forEach(cube => {
                const cubeElement = document.createElement('div');
                cubeElement.className = 'cube';
                cubeElement.style.backgroundColor = cube.color;
                cubeElement.style.left = cube.position.x + 'px';
                cubeElement.style.top = cube.position.y + 'px';
                container.appendChild(cubeElement);
            });
        }

        function caricaEMostraCubi() {
            fetch('percorso/al/tuo/file.json')
                .then(response => response.json())
                .then(data => {
                    cubeData = data;
                    mostraCubi();
                })
                .catch(error => console.error('Errore nel caricamento del JSON:', error));
        }
    </script>
</body>
</html>